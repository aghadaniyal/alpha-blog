<h1 align="center">All Alpha Bloggers</h1>

<div align="center">
	<%= will_paginate %>
 <% @users.each do |u| %>
	<ul class = "listing">
		<div class="row">
			<div class="well col-md-4 col-md-offset-4">
				<li> <%= link_to gravatar_for(u), user_path(u) %></li>
				<li class="article-title">
					<%= link_to u.username, user_path(u) %></li>
				<li><small><%= pluralize(u.articles.count, "articles")%></small> </li>
				<% if logged_in? and current_user.admin? %>
				<li><%= link_to "Delete this user", user_path(u), method: :delete,

					data: { confirm: "Are you sure you want to delete the user and all their articles?" } %>
				</li>
				<% end %>
			</div>
		</div>
	</ul>


<% end %>
<%= will_paginate %>
</div>