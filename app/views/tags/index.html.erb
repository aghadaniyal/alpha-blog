<h1 align="center">Listing All Categories</h1>

	<div align="center">

		<%= will_paginate %>

		<% @tags.each do |c| %>

	<ul class="listing">

	<div class="row">

		<div class="well col-md-4 col-md-offset-4">

		<li class="article-title">

	<%= link_to "#{c.name}", tags_path(c) %>
	<li><small><%= pluralize(c.articles.count, "articles")%></small> </li>

		</li>

		</div>

	</div>

	</ul>

<% end %>
	<%= will_paginate %>

</div>