<h1 align="center">List of All Articles</h1>

<p><%= link_to 'Create a new article', new_article_path%></p>


	<% @articles.each do |d| %>
	<div class="row">
		<div class="col-xs-8 col-xs-offset-2">
			<div class="well well-lg">
			  	<div class="article-title">
						<%= link_to d.title, article_path(d) %>
			 	</div>
					<div class="article-body">
						<%= truncate(d.description, length: 80) %>
						
						<div class="article-meta-details">
							<small>
								Creadted by: <%= d.user.username  if d.user %>,
								Created:	 <%= time_ago_in_words(d.created_at) %> ago,
								Last updated: <%= time_ago_in_words(d.updated_at) %> ago
							</small>
						</div>
					</div>
						<div class="article-actions">
							<%= link_to 'Edit this article', edit_article_path(d), class: "btn btn-xs btn-primary"%> 
							<%= link_to 'delete this article', article_path(d), method: :delete ,data: {confirm:"Are you sure, You want to delete?"}, class: "btn btn-xs btn-danger" %> 
						</div>
			</div>
		</div>
	</div>
<% end %>

