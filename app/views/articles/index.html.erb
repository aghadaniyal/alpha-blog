<h1>List of All Articles</h1>

<p><%= link_to 'Create a new article', new_article_path%></p>
<table>
	<tr>
		<th>Title</th>
		<th>Description</th>
	</tr>
	<% @articles.each do |d| %>
	<tr>
		<td><%= d.title %></td>
		<td><%= d.description %></td>
		<td><%= link_to 'Edit', edit_article_path(d)%></td>
		<td><%= link_to 'Show', article_path(d)%></td>
	</tr>
<% end %>

</table>